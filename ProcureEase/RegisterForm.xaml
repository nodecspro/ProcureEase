<Window x:Class="ProcureEase.RegisterForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RegisterForm" Height="600" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Closed="OnMainWindowClosed">
    <Grid Background="#FF1C1C1C">
        <Border BorderBrush="#FF4D4D4D" BorderThickness="1" CornerRadius="5" Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock FontSize="20" FontWeight="Bold" Margin="0 10" Foreground="#FFE8E8E8" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30"><Run Language="ru-ru" Text="Регистрация"/><LineBreak/><Run Language="ru-ru"/></TextBlock>

                <StackPanel Grid.Row="1" Margin="10">
                    <TextBlock Text="Имя пользователя:" Foreground="#FFE8E8E8"/>
                    <TextBox x:Name="txtUsername" Margin="0 5" Background="#FF2B2B2B" Foreground="#FFE8E8E8" BorderBrush="#FF4D4D4D" BorderThickness="1" Padding="5"/>

                    <TextBlock Text="Пароль:" Margin="0 10 0 0" Foreground="#FFE8E8E8"/>
                    <PasswordBox x:Name="txtPassword" Margin="0 5" Background="#FF2B2B2B" Foreground="#FFE8E8E8" BorderBrush="#FF4D4D4D" BorderThickness="1" Padding="5"/>

                    <TextBlock Text="Имя:" Margin="0 10 0 0" Foreground="#FFE8E8E8"/>
                    <TextBox x:Name="txtFirstName" Margin="0 5" Background="#FF2B2B2B" Foreground="#FFE8E8E8" BorderBrush="#FF4D4D4D" BorderThickness="1" Padding="5"/>

                    <TextBlock Text="Фамилия:" Margin="0 10 0 0" Foreground="#FFE8E8E8"/>
                    <TextBox x:Name="txtLastName" Margin="0 5" Background="#FF2B2B2B" Foreground="#FFE8E8E8" BorderBrush="#FF4D4D4D" BorderThickness="1" Padding="5"/>

                    <TextBlock Text="Отчество (если есть):" Margin="0 10 0 0" Foreground="#FFE8E8E8"/>
                    <TextBox x:Name="txtPatronymic" Margin="0 5" Background="#FF2B2B2B" Foreground="#FFE8E8E8" BorderBrush="#FF4D4D4D" BorderThickness="1" Padding="5"/>

                    <TextBlock Text="Номер телефона:" Margin="0 10 0 0" Foreground="#FFE8E8E8"/>
                    <TextBox x:Name="txtPhoneNumber" Margin="0 5" Background="#FF2B2B2B" Foreground="#FFE8E8E8" BorderBrush="#FF4D4D4D" BorderThickness="1" Padding="5"/>

                    <TextBlock Text="Почта:" Margin="0 10 0 0" Foreground="#FFE8E8E8"/>
                    <TextBox x:Name="txtEmail" Margin="0 5" Background="#FF2B2B2B" Foreground="#FFE8E8E8" BorderBrush="#FF4D4D4D" BorderThickness="1" Padding="5"/>
                </StackPanel>
                <Button Grid.Row="2" Content="Зарегистрироваться" Click="BtnRegister_Click" HorizontalAlignment="Center" Margin="0 10 0 0" Background="#FF4D4D4D" Foreground="#FFE8E8E8" BorderBrush="#FF4D4D4D" BorderThickness="1" Padding="5"/>
            </Grid>
        </Border>
    </Grid>
</Window>
