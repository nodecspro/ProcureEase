<Window x:Class="ProcureEase.RegisterForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="500" Width="400"
        Style="{StaticResource {x:Type Window}}">
    <Grid Background="#FF2B2B2B">
        <Border BorderBrush="#FF4D4D4D" BorderThickness="1" CornerRadius="5" Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Registration Form" FontSize="20" FontWeight="Bold" Margin="0 10" Foreground="#FFE8E8E8" HorizontalAlignment="Center"/>

                <StackPanel Grid.Row="1" Margin="10">
                    <TextBlock Text="Username:" Foreground="#FFE8E8E8"/>
                    <TextBox x:Name="txtUsername" Margin="0 5" Background="#FF4D4D4D" Foreground="#FFE8E8E8" BorderBrush="#FF4D4D4D" BorderThickness="1" Padding="5"/>
                    
                    <TextBlock Text="Password:" Margin="0 10 0 0" Foreground="#FFE8E8E8"/>
                    <PasswordBox x:Name="txtPassword" Margin="0 5" Background="#FF4D4D4D" Foreground="#FFE8E8E8" BorderBrush="#FF4D4D4D" BorderThickness="1" Padding="5"/>
                    
                    <TextBlock Text="Role:" Margin="0 10 0 0" Foreground="#FFE8E8E8"/>
                    <ComboBox x:Name="cmbRole" Margin="0 5" Background="#FF4D4D4D" Foreground="#FFE8E8E8" BorderBrush="#FF4D4D4D" BorderThickness="1" Padding="5">
                        <ComboBoxItem Content="User"/>
                        <ComboBoxItem Content="Moderator"/>
                    </ComboBox>
                    
                    <!-- Add other fields here -->
                </StackPanel>
                
                <Button Grid.Row="2" Content="Register" HorizontalAlignment="Center" Width="100" Margin="0 10 0 0" Background="#FF4D4D4D" Foreground="#FFE8E8E8" BorderBrush="#FF4D4D4D" BorderThickness="1" Padding="5"/>
            </Grid>
        </Border>
    </Grid>
</Window>
