<mah:MetroWindow x:Class="ProcureEase.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:local="clr-namespace:ProcureEase"
                      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      mc:Ignorable="d"
                      Title="Авторизация и Регистрация" Height="320" Width="400"
                      Closed="OnMainWindowClosed"
                      WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <!-- Имя пользователя -->
        <Grid HorizontalAlignment="Center" Height="57" Margin="0,48,0,0" VerticalAlignment="Top" Width="300">
            <Label Content="Имя пользователя" VerticalAlignment="Top" HorizontalAlignment="Left" />
            <TextBox x:Name="txtUsername" HorizontalAlignment="Center" Height="30" Margin="0,27,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Padding="5"/>
        </Grid>

        <!-- Пароль -->
        <Grid HorizontalAlignment="Center" Height="57" Margin="0,122,0,0" VerticalAlignment="Top" Width="300">
            <Label Content="Пароль" VerticalAlignment="Top"  HorizontalAlignment="Left" />
            <PasswordBox x:Name="txtPassword" HorizontalAlignment="Center" Height="30" Margin="0,27,0,0" VerticalAlignment="Top" Width="300"  Padding="5"/>
        </Grid>

        <!-- Текст "Нет аккаунта? Зарегистрироваться" -->
        <TextBlock VerticalAlignment="Top" Margin="54,179,0,0" FontSize="10" >
            <Run Text="Нет аккаунта? "/>
            <Hyperlink Click="RegisterHyperlink_Click">
                <TextBlock Text="Зарегистрироваться" TextDecorations="Underline"/>
            </Hyperlink>
        </TextBlock>
        <Button x:Name="btnLogin" Content="Войти" Margin="136,216,136,0" Click="BtnLogin_Click" VerticalAlignment="Top"/>
    </Grid>
</mah:MetroWindow>
