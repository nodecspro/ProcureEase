<Window x:Class="ProcureEase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProcureEase"
        mc:Ignorable="d"
        Title="Авторизация и Регистрация" Height="350" Width="400"
        Closed="OnMainWindowClosed"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#FF1C1C1C">
        <!-- Имя пользователя -->
        <Grid HorizontalAlignment="Center" Height="57" Margin="0,48,0,0" VerticalAlignment="Top" Width="300">
            <Label Content="Имя пользователя" VerticalAlignment="Top" Foreground="#FFE8E8E8" FontSize="12" FontFamily="Segoe UI" HorizontalAlignment="Left" />
            <TextBox x:Name="txtUsername" HorizontalAlignment="Center" Height="30" Margin="0,27,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Background="#FF2B2B2B" BorderBrush="#FF4D4D4D" Width="300" FontSize="12" Foreground="#FFE8E8E8" Padding="5"/>
        </Grid>

        <!-- Пароль -->
        <Grid HorizontalAlignment="Center" Height="57" Margin="0,122,0,0" VerticalAlignment="Top" Width="300">
            <Label Content="Пароль" VerticalAlignment="Top" Foreground="#FFE8E8E8" FontSize="12" FontFamily="Segoe UI" HorizontalAlignment="Left" />
            <PasswordBox x:Name="txtPassword" HorizontalAlignment="Center" Height="30" Margin="0,27,0,0" VerticalAlignment="Top" Width="300" Background="#FF2B2B2B" BorderBrush="#FF4D4D4D" FontSize="12" Foreground="#FFE8E8E8" Padding="5"/>
        </Grid>

        <!-- Текст "Нет аккаунта? Зарегистрироваться" -->
        <TextBlock VerticalAlignment="Top" Margin="54,179,0,0" FontSize="10" Foreground="#FFE8E8E8">
            <Run Text="Нет аккаунта? "/>
            <Hyperlink Click="RegisterHyperlink_Click">
                <TextBlock Text="Зарегистрироваться" TextDecorations="Underline"/>
            </Hyperlink>
        </TextBlock>
        <Button x:Name="btnLogin" Content="Войти" Background="#FF4D4D4D" BorderBrush="#FF4D4D4D" Foreground="#FFE8E8E8" FontSize="14" Margin="136,216,136,0" Click="BtnLogin_Click" Width="128" Height="32" HorizontalAlignment="Center" VerticalAlignment="Top"/>
    </Grid>
</Window>
