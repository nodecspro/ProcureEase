<mah:MetroWindow
    x:Class="ProcureEase.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Авторизация"
    Width="400"
    Height="320"
    Closed="OnMainWindowClosed"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <!--  Имя пользователя  -->
        <Grid
            Width="300"
            Height="57"
            Margin="0,48,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top">
            <Label
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Имя пользователя" />
            <TextBox
                x:Name="txtUsername"
                Width="300"
                Height="30"
                Margin="0,27,0,0"
                Padding="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                TextWrapping="Wrap" />
        </Grid>

        <!--  Пароль  -->
        <Grid
            Width="300"
            Height="57"
            Margin="0,122,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top">
            <Label
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Пароль" />
            <PasswordBox
                x:Name="txtPassword"
                Width="300"
                Height="30"
                Margin="0,27,0,0"
                Padding="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Top" />
        </Grid>

        <!--  Текст "Нет аккаунта? Зарегистрироваться"  -->
        <TextBlock
            Margin="54,179,0,0"
            VerticalAlignment="Top"
            FontSize="10">
            <Run Text="Нет аккаунта? " />
            <Hyperlink Click="RegisterHyperlink_Click">
                <TextBlock Text="Зарегистрироваться" TextDecorations="Underline" />
            </Hyperlink>
        </TextBlock>
        <Button
            x:Name="btnLogin"
            Margin="136,216,136,0"
            VerticalAlignment="Top"
            Click="BtnLogin_Click"
            Content="Войти" />
    </Grid>
</mah:MetroWindow>
